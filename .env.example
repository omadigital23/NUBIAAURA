# Environment Variables for NUBIA AURA

# ==========================================
# Supabase Configuration
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==========================================
# Chaabi Payment Gateway (Morocco)
# M2T / Payzone - Banque Populaire
# ==========================================
CHAABI_API_KEY=your_chaabi_api_key_uuid
CHAABI_SECRET_KEY=your_chaabi_secret_key
CHAABI_GATEWAY_URL=https://payment.chaabi.ma/checkout

# ==========================================
# PayTech Payment Gateway (Senegal + International)
# Intech Group SA - Wave, Orange Money, Cards
# ==========================================
PAYTECH_API_KEY=your_paytech_api_key
PAYTECH_SECRET_KEY=your_paytech_secret_key
PAYTECH_ENV=test  # 'test' for sandbox, 'prod' for production

# ==========================================
# Email Service (Resend or SendGrid)
# ==========================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# OR use SendGrid
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ==========================================
# SMS/WhatsApp Notifications
# ==========================================
# Twilio
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Or CallMeBot (free alternative)
# CALLMEBOT_API_KEY=your_callmebot_key

# ==========================================
# Admin Configuration
# ==========================================
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD_HASH=your_pbkdf2_hash_here
ADMIN_SALT=your_unique_salt_here
ADMIN_TOKEN_SECRET=your_strong_random_secret_256_bits

# Legacy (keep for compatibility)
ADMIN_USER=your_admin_username
ADMIN_PASS=your_secure_password
ADMIN_TOKEN=your_secure_token_hash

# ==========================================
# Admin 2FA Configuration (Optional but Recommended)
# ==========================================
ADMIN_2FA_ENABLED=false
ADMIN_2FA_SECRET=your_totp_secret_here
# Generate with: npm run generate:2fa-secret

# ==========================================
# Application URL
# ==========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: https://yourdomain.com

# ==========================================
# SECURITY - Rate Limiting (NEW)
# ==========================================
# Upstash Redis for distributed rate limiting
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Enable/disable rate limiting
ENABLE_RATE_LIMITING=true

# ==========================================
# SECURITY - Error Monitoring (NEW)
# ==========================================
# Sentry for error tracking and monitoring
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/123456
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Sentry organization and project (for uploads)
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# ==========================================
# Analytics & Tracking
# ==========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel (optional)
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_pixel_id

# ==========================================
# Storage & CDN
# ==========================================
# For product images (if not using Supabase Storage)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# Payment & Order Settings
# ==========================================
# Stock reservation TTL in minutes
PAYMENT_RESERVATION_TTL_MINUTES=30

# Currency
NEXT_PUBLIC_CURRENCY=XOF
NEXT_PUBLIC_CURRENCY_SYMBOL=CFA

# ==========================================
# Development Settings
#==========================================
NODE_ENV=development
# NODE_ENV=production

# Vercel Git Info (auto-set in Vercel)
# NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=abc123def456xxx

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable features
ENABLE_TRACKING=true
ENABLE_NEWSLETTER=true
ENABLE_REVIEWS=false
ENABLE_WISHLIST=false
ENABLE_LOYALTY_PROGRAM=false

# ==========================================
# Manager Notifications
# ==========================================
# Manager email for order notifications
MANAGER_EMAIL=manager@yourdomain.com

# Manager phone for WhatsApp notifications
MANAGER_PHONE=+221xxxxxxxxx

# ==========================================
# CORS & Security Headers
# ==========================================
# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==========================================
# Internationalization
# ==========================================
# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=fr

# Supported locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=fr,en