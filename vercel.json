{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "regions": [
    "cdg1"
  ],
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "1"
    }
  },
  "redirects": [
    {
      "source": "/:path((?!api/).*)",
      "has": [
        {
          "type": "host",
          "value": "nubiaaura.com"
        }
      ],
      "destination": "https://www.nubiaaura.com/:path",
      "permanent": true
    },
    {
      "source": "/:path((?!api/).*)",
      "has": [
        {
          "type": "host",
          "value": "www.nubiaaura.com"
        },
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://www.nubiaaura.com/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ]
}